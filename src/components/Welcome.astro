---
import { protocol, rootDomain } from "@/utils";
const { subdomain, tenant } = Astro.props;
const host = Astro.url.host;
const emoji = tenant.emoji;
---

<section class="tenant-info">
  <header class="absolute p-4">
    <div class="flex justify-between items-center">   
      <a href={`${protocol}://${rootDomain}`} class="flex gap-1 items-center text-gray-800 hover:underline">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-4 w-4"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M15 19l-7-7 7-7"
          />
        </svg>
        Back to {rootDomain}
      </a>
    </div>
  </header>
  
  <div class="flex-1 flex items-center justify-center h-dvh">
    <div class="text-center">
      <div class="text-9xl mb-6">{emoji}</div>
      <h1 class="text-4xl font-bold tracking-tight text-gray-900">
        Welcome to {host}
      </h1>
      <p class="mt-3 text-lg text-gray-600">
        This is your custom subdomain page
      </p>
    </div>
  </div>
</section>
